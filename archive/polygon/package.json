{
  "name": "polygon",
  "version": "1.0.0",
  "scripts": {
    "start": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "build": "./node_modules/webpack/bin/webpack.js --colors",
    "test": "./node_modules/karma/bin/karma start --colors",
    "single-run-test": "./node_modules/karma/bin/karma start --single-run --colors --verbose",
    "clear": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lpil/polygon.git"
  },
  "author": "Louis Pilfold",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/lpil/polygon/issues"
  },
  "homepage": "https://github.com/lpil/polygon#readme",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "css-loader": "^0.23.1",
    "deep-freeze": "0.0.1",
    "eslint": "^2.5.1",
    "eslint-loader": "^1.3.0",
    "file-loader": "^0.8.5",
    "node-sass": "^3.4.2",
    "normalize.css": "^4.0.0",
    "sass-loader": "^3.2.0",
    "springy": "^2.7.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "node": true,
      "browser": true,
      "mocha": true
    },
    "plugins": [],
    "globals": {
      "expect": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        2,
        80,
        4
      ],
      "no-console": 1,
      "semi": 2,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "quotes": [
        2,
        "double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  }
}
